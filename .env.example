# ==============================================
# SecuBot - Environment Variables
# ==============================================

# Application
APP_NAME=SecuBot
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Server
HOST=0.0.0.0
PORT=8000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=secubot_dev

# MongoDB Atlas (Producción)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# DATABASE_NAME=secubot_prod

# Slack Integration (opcional por ahora)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_NOTIFICATIONS_ENABLED=false

# Rules Configuration
RULES_CONFIG_PATH=config/rules.yaml
BADGES_CONFIG_PATH=config/badges.yaml

# Rescan Configuration
RESCAN_DELAY_SECONDS=300  # 5 minutos (configurable)
RESCAN_TIMEOUT_HOURS=72   # 72 horas para timeout (PEN-001)

# Gamification Settings
ENABLE_SPEED_BONUS=true
SPEED_BONUS_THRESHOLD_HOURS=24
SPEED_BONUS_MULTIPLIER=1.5

# Task Scheduler
ENABLE_SCHEDULER=true
TIMEOUT_CHECK_INTERVAL_MINUTES=60  # Cada hora
LEADERBOARD_UPDATE_CRON=0 0 * * 0  # Domingos a medianoche

# Security (para futura autenticación)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (para desarrollo)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting (futuro)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60